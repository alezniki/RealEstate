<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.nikola.zadataktest.activities.DetailActivity">

    <include layout="@layout/toolbar"/>

        <EditText
            android:id="@+id/et_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estate Name:"/>
        <EditText
            android:id="@+id/et_detail_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estate Description:"/>
        <EditText
            android:id="@+id/et_detail_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estate Address:"/>
        <EditText
            android:id="@+id/et_detail_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estate Phone Number:"/>

        <EditText
            android:id="@+id/et_detail_quadrature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estate Quardrature:"/>
        <EditText
            android:id="@+id/et_detail_rooms_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estate Number Of Rooms:"/>
        <EditText
            android:id="@+id/et_detail_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Estate Price:"/>

</LinearLayout>
