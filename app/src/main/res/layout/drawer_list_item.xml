<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <!-- This is a NavigationDrawer item, used in DrawerAdapter.java -->
    <ImageView
        android:id="@+id/iv_drawer_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:id="@+id/tv_drawer_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@id/iv_drawer_icon"
        android:textSize="18sp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_drawer_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/iv_drawer_icon"
        android:layout_below="@id/tv_drawer_title"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textStyle="bold"/>

</RelativeLayout>